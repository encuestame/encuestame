<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

    <var name="pollBean" class="org.encuestame.web.beans.survey.poll.PollBean" />

    <view-state id="poll">

    </view-state>


    <end-state id="succesfullEnd"></end-state>

    <global-transitions>
        <transition on="cancel" to="succesfullEnd" />
        <transition on-exception="org.encuestame.core.exception.EnMeExpcetion"
            to="error" />
    </global-transitions>

</flow>
