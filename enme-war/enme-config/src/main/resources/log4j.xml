<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p: %c - %m%n" />
        </layout>
    </appender>

    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="1000KB" />
        <param name="maxBackupIndex" value="0" />
        <param name="File" value="encuestame-webapp.log" />
        <param name="threshold" value="warn" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{ABSOLUTE} %5p %c{1}:%L - %m%n" />
        </layout>
    </appender>

    <!-- Encuestame -->

    <logger name="org.encuestame.mvc">
        <level value="warn" />
    </logger>

    <logger name="org.encuestame.comet">
        <level value="warn" />
    </logger>

     <logger name="org.encuestame.social">
        <level value="warn" />
    </logger>

        <logger name="org.encuestame.oauth">
        <level value="warn" />
    </logger>

    <logger name="org.encuestame.persistence">
        <level value="warn" />
    </logger>

    <logger name="org.encuestame.core">
        <level value="warn" />
    </logger>

    <logger name="org.encuestame.business">
        <level value="warn" />
    </logger>

    <logger name="org.encuestame.utils">
        <level value="warn" />
    </logger>

    <logger name="org.encuestame.search">
        <level value="warn" />
    </logger>

    <!-- Spring -->

    <logger name="org.springframework.core">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.beans">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.context">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.jdbc">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.webflow">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.messaging">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.messaging.simp.stomp">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.web">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.web.socket">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.security">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.integration">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.orm.hibernate5.support">
        <level value="warn" />
    </logger>

    <!-- APACHE -->

    <logger name="org.apache.http">
        <level value="warn" />
    </logger>

    <logger name="httpclient.wire">
        <level value="warn" />
    </logger>

    <!-- Hibernate -->

    <logger name="net.sf.ehcache">
        <level value="warn" />
    </logger>

    <logger name="org.hibernate">
        <level value="warn" />
    </logger>

    <logger name="org.springframework.aop.framework.Cglib2AopProxy">
         <level value="error" />
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="warn" />
        <appender-ref ref="console" />
        <!--  <appender-ref ref="file" />-->
    </root>

</log4j:configuration>