<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="page" templateExpression="/WEB-INF/layouts/page.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/header.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/footer.jsp" />
    </definition>

    <definition name="page-logged" templateExpression="/WEB-INF/layouts/page.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/header.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/footer.jsp" />
    </definition>

    <definition name="setup-page" templateExpression="/WEB-INF/layouts/setup-page.jsp">
        <put-attribute name="footer" expression="/WEB-INF/layouts/footer.jsp" />
    </definition>

    <definition name="login-page" templateExpression="/WEB-INF/layouts/login-page.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/header.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/footer.jsp" />
    </definition>

    <definition name="main-vote" templateExpression="/WEB-INF/layouts/vote.jsp">
         <put-attribute name="header" expression="/WEB-INF/layouts/header.jsp" />
         <put-attribute name="footer" expression="/WEB-INF/layouts/footer.jsp" />
    </definition>

    <definition name="main-embedded" templateExpression="/WEB-INF/layouts/embedded-page.jsp"></definition>

    <definition name="setupPage" templateExpression="/WEB-INF/layouts/setup.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts//setup/header.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/footer.jsp" />
    </definition>

    <definition name="errorPage" templateExpression="/WEB-INF/layouts/errorPage.jsp">
        <put-attribute name="header" expression="/WEB-INF/layouts/header-error.jsp" />
        <put-attribute name="footer" expression="/WEB-INF/layouts/footer.jsp" />
    </definition>

    <definition name="display/iframe" templateExpression="/WEB-INF/layouts/iframe.jsp">
    </definition>

</tiles-definitions>
